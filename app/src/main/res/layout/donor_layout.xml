<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/blood_group_card"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            android:layout_centerVertical="true"
            app:cardCornerRadius="15dp"
            android:padding="10dp">
           <TextView
               android:id="@+id/blood_group_donortext"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textStyle="bold"
               android:padding="10dp"
               android:textAlignment="center"
               android:textColor="@android:color/black"
               android:text="A+"
               android:textSize="28sp"/>
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/blood_group_card"
            android:layout_marginStart="10dp">
            <TextView
                android:id="@+id/donor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yashraj Verma"
                android:textSize="28sp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/donor_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gopinath ki pulia"
                android:textSize="18sp"
                android:textColor="@color/texts"
                android:layout_below="@id/donor_name"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/donor_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morena , "
                android:textSize="18sp"
                android:textColor="@color/texts"
                android:layout_below="@id/donor_address"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/donor_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Madhya Pradesh "
                android:textSize="18sp"
                android:textColor="@color/texts"
                android:layout_toRightOf="@id/donor_city"
                android:layout_below="@id/donor_address"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/donor_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8839080*** "
                android:textSize="18sp"
                android:textColor="@color/texts"
                android:layout_below="@id/donor_state"
                android:paddingBottom="3dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>